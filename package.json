{
  "name": "vite-bridge-boilerplate",
  "version": "0.0.8",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/compress-images.js && node scripts/optimize-svg.js && vite build",
    "build:stats": "ANALYZE=true pnpm build",
    "preview": "vite preview",
    "format:code": "biome format --write ./src",
    "format:templates": "prettier --write \"./src/views/**/*.njk\"",
    "format": "pnpm format:code && pnpm format:templates",
    "lint:code": "biome lint --apply ./src",
    "check": "pnpm lint:code && pnpm format",
    "verify": "pnpm build && pnpm playwright test",
    "test:ui": "pnpm playwright test --ui",
    "test:update": "pnpm build && pnpm playwright test --update-snapshots",
    "/*! --- ДИАГНОСТИЧЕСКИЕ ИНСТРУМЕНТЫ --- */": "",
    "test:fonts": "vite --open /test-fonts.html",
    "sync:theme": "if [ -n \"$(git status --porcelain)\" ]; then echo '❌ Ошибка: Обнаружены незакоммиченные изменения!'; exit 1; fi && echo '✅ Рабочая директория чиста, начинаю синхронизацию...' && rsync -av --delete dist/ ../backend/wp-content/themes/my-theme/assets/",
    "/*! --- ВСПОМОГАТЕЛЬНЫЕ (UTILITY) СКРИПТЫ --- */": "",
    "favicons:generate": "pwa-assets-generator --config vite.config.js",
    "images:convert": "node scripts/convert-images.js",
    "images:compress": "node scripts/compress-images.js",
    "svg:optimize": "node scripts/optimize-svg.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@playwright/test": "^1.56.1",
    "@vituum/vite-plugin-nunjucks": "^1.1.0",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.6.2",
    "critical": "^7.2.1",
    "dotenv": "^17.2.3",
    "fontaine": "^0.6.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "ora": "^9.0.0",
    "postcss-sort-media-queries": "^5.2.0",
    "posthtml": "^0.16.7",
    "posthtml-responsive-images": "^1.0.3",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.4",
    "svgo": "^4.0.0",
    "tinify": "^1.8.2",
    "vite": "^7.1.12",
    "vite-plugin-pwa": "^1.1.0",
    "vite-plugin-svg-sprite": "^0.6.3",
    "vite-plugin-webfont-dl": "^3.11.1"
  },
  "packageManager": "pnpm@10.19.0"
}
